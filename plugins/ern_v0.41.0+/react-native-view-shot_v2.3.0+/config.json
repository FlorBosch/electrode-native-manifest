{
  "android": {
    "root": "",
    "moduleName": "android"
  },
  "ios": {
    "react-native@<0.61.0": {
      "copy": [
        { "source": "ios/*", "dest": "{{{projectName}}}/Libraries/RNViewShot" }
      ],
      "pbxproj": {
        "addProject": [
          { "path": "RNViewShot/RNViewShot.xcodeproj", "group": "Libraries", "staticLibs": [ { "name": "libRNViewShot.a", "target": "RNViewShot" } ] }
        ],
        "addHeaderSearchPath": [
          "\"$(SRCROOT)/{{{projectName}}}/Libraries/RNViewShot/**\""
        ]
      }
    }
  }
}
